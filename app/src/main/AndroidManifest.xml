        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Budgetin">
        <activity
            android:name=".ui.Stock.InputStockLayout"
            android:exported="true"
            android:parentActivityName=".ui.MainActivity"
         />
        <activity
            android:name=".ui.Sales.InputSalesLayout"
            android:exported="true"
            android:parentActivityName=".ui.MainActivity"
          />
        <activity
            android:name=".ui.Stock.AnalyticsStock"
            android:exported="true"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.Sales.analytics.AnalyticsSales"
            android:exported="true"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.tips.WebActivity4"
            android:exported="true"
            android:label="Create Engagement Strategies" />
        <activity
            android:name=".ui.tips.WebActivity3"
            android:exported="true"
            android:label="Set Realistic Goals" />
        <activity
            android:name=".ui.tips.WebActivity2"
            android:exported="true"
            android:label="Add real value for your customer" />
        <activity
            android:name=".ui.tips.WebActivity1"
            android:exported="true"
            android:label="Track your Progress" />
        <activity
            android:name=".ui.Stock.TransactionStockActivity"
            android:exported="true"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.Sales.TransactionSalesActivity"
            android:exported="true"
            android:theme="@style/NoActionBar" />

        <activity
            android:name=".ui.tips.TipsActivity"
            android:exported="true"
